<body>
  <div class="container">

    <h1 >Новини</h1>

 </head>

    <style>
      body { background: url(https://abc-decor.com/img/gallery/80/thumbs/thumb_l_psh_0000691.jpg); }
    </style>

    <% articles.forEach(article => { %>
      <div class="card mt-4">
        <div class="card-body">
          <h4 class="card-title"><%= article.title %></h4>

          <div class="card-subtitle text-muted mb-2">
            <%= article.createdAt.toLocaleDateString() %>
          </div>
          <div class="card-text mb-2"><%= article.description %></div>
          <a href="articles/<%= article.slug %>" class="btn btn-primary">Детальніше</a>

          <form action="/articles/<%= article.id %>?_method=DELETE" method="POST" class="d-inline">

          </form>
        </div>
      </div>
    <% }) %>
  </div>
</body>
</html>
